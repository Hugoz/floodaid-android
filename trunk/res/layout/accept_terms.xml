<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:background = "#ffffff">
  
  <TextView
	android:id="@+id/header_title"
    style="@style/Header"
    android:text="Register" />
  
  <LinearLayout
  android:orientation = "vertical"
  android:layout_width = "fill_parent"
  android:layout_height = "fill_parent"
  android:paddingLeft = "30dp"
  android:paddingRight = "30dp"
  >
  
  	<CheckBox
  	 android:id = "@+id/agree_checkbox"
  	 android:textColor = "#000000"
 	 android:layout_width = "wrap_content"
 	 android:layout_height = "wrap_content"
 	 android:text = "I agree with these terms"
 	 >
 	 </CheckBox>
 	 
 	 <Button
	android:id = "@+id/btn_register"
	android:text = "Register"
	style="@style/MenuItem.Blue"
	>
	</Button>
  
  	<ScrollView
  	android:paddingTop = "30dp"
  	android:layout_width = "wrap_content"
  	android:layout_height = "wrap_content">
		<TextView android:layout_height="fill_parent" android:layout_width="fill_parent" android:text="@string/termsOfUse" android:id="@+id/TextView01"></TextView>
	</ScrollView>
  
</LinearLayout>
</LinearLayout>

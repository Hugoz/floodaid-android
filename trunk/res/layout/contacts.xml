<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/menu"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff">
	
    <TextView 
	android:id="@+id/header_title"
    style="@style/Header"
    android:text="Emergency contacs" />
    
    <LinearLayout 
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="30dp"
    android:paddingRight="30dp">
    
    <ImageView 
	    android:src="@drawable/logo" 
	    android:layout_height="100dp"
	    android:layout_width="wrap_content"
	    android:layout_marginTop="10dp" 
	    android:layout_marginBottom="10dp"/>
	    
		<Button  
		android:id="@+id/call_disaster_recovery_hotline"
	    style="@style/MenuItem.Blue"
	    android:text="Disaster Recovery Hotline" />
	    <Button 
		android:id="@+id/call_ses"
	    style="@style/MenuItem.Red"
	    android:text="SES" />
	    <Button  
		android:id="@+id/call_police_fire_ambulance"
	    style="@style/MenuItem.Blue"
	    android:text="Police, Fire, Ambulance - 000" />
	    <Button 
		android:id="@+id/call_police_link"
	    style="@style/MenuItem.Red"
	    android:text="Non-urgent Incidents (PoliceLink)" />
</LinearLayout>
</LinearLayout>
